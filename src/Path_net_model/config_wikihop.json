{
  "dataset_reader": {
    "type": "wikihop_data_reader",
    "lazy": false,
    "cut_context": false,
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    },
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "just_spaces"
      },
      "end_tokens": ["@@NULL@@"]
    }
  },
  "vocabulary": {
    "directory_path": "data/datasets/WikiHop/vocabulary/"
   },
  "train_data_path": "data/datasets/WikiHop/adjusted/paths30/train-path-lines.txt",
  "validation_data_path": "data/datasets/WikiHop/adjusted/paths30/dev-path-lines.txt",
  "model": {
    "type": "pathnet",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "data/embeddings/glove.840B.300d.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "embeddings_dropout_value": 0.25,
    "aggregate_feedforward": {
      "input_dim": 100,
      "num_layers": 1,
      "hidden_dims": 1,
      "activations": "linear"
    },
    "question_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "num_layers": 1,
      "input_size": 300,
      "hidden_size": 50
    },
    "document_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "num_layers": 1,
      "input_size": 300,
      "hidden_size": 50
    },
    "choice_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "num_layers": 1,
      "input_size": 300,
      "hidden_size": 50
    },
    "loc_path_encoder": {
      "type": "tree",
      "he_e1_comp": {
        "input_dim": 400,
        "num_layers": 1,
        "hidden_dims": 100,
        "activations": "tanh",
        "dropout": 0.25
      },
      "e1_ca_comp": {
        "input_dim": 400,
        "num_layers": 1,
        "hidden_dims": 100,
        "activations": "tanh",
        "dropout": 0.25
      },
      "r1r2_comp": {
        "input_dim": 200,
        "num_layers": 1,
        "hidden_dims": 100,
        "activations": "tanh",
        "dropout": 0.25
      },
      "rnn_comp": {
        "type": "lstm",
        "bidirectional": false,
        "num_layers": 1,
        "input_size": 200,
        "hidden_size": 100,
        "dropout": 0.25
      }
    },
    "allchoice_projector": {
      "input_dim": 200,
      "num_layers": 1,
      "hidden_dims": 100,
      "activations": "tanh",
      "dropout": 0.25
    },
    "question_projector": {
      "input_dim": 200,
      "num_layers": 1,
      "hidden_dims": 100,
      "activations": "tanh",
      "dropout": 0.25
    },
    "combined_q_projector": {
      "input_dim": 100,
      "num_layers": 1,
      "hidden_dims": 100,
      "activations": "linear",
      "dropout": 0.25
    },
    "combined_s_projector": {
      "input_dim": 100,
      "num_layers": 1,
      "hidden_dims": 100,
      "activations": "linear",
      "dropout": 0.25
    },
    "joint_encoder": {
      "seq_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "num_layers": 1,
        "input_size": 100,
        "hidden_size": 50
      }
    },
    "doc_aggregator": {
      "projector": {
        "input_dim": 200,
        "num_layers": 1,
        "hidden_dims": 1,
        "activations": "linear",
        "dropout": 0.25
      },
      "intermediate_projector": {
        "input_dim": 200,
        "num_layers": 1,
        "hidden_dims": 200,
        "activations": "linear",
        "dropout": 0.25
      }
    },
    "choice_aggregator": {
      "projector": {
        "input_dim": 100,
        "num_layers": 1,
        "hidden_dims": 1,
        "activations": "linear",
        "dropout": 0.25
      },
      "intermediate_projector": {
        "input_dim": 100,
        "num_layers": 1,
        "hidden_dims": 100,
        "activations": "linear",
        "dropout": 0.25
      }
    },
    "path_aggregator": {
      "input_dim": 400,
      "num_layers": 1,
      "hidden_dims": 100,
      "activations": "linear",
      "dropout": 0.25
    },
    "path_loc_aggregator": "mean",
    "allchoice_loc": false,
    "path_enc": true,
    "path_enc_doc_based": true,
    "path_enc_loc_based": true,
    "combine_scores": "add_cat",
    "span_extractor": {
      "type": "endpoint",
      "input_dim": 2,
      "combination": "x,y"
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens._projection.*weight", {"type": "xavier_normal"}]
    ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["candidates", "num_fields"],["documents", "list_num_tokens"]],
    "biggest_batch_first": true,
    "batch_size": 8,
    "cache_instances": false
  },
  "trainer": {
    "num_epochs": 25,
    "patience": 12,
    "cuda_device": 0,
    "grad_norm": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    },
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 2
    }
  }
}
